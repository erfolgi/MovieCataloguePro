<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.erfolgi.moviecataloguepro.ui.movie.MovieFragment"
        android:label="Now Playing"
        tools:layout="@layout/fragment_movie" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.erfolgi.moviecataloguepro.ui.tvshow.TvShowFragment"
        android:label="Aired Today"
        tools:layout="@layout/fragment_tv_show" />

    <fragment
        android:id="@+id/navigation_favorite"
        android:name="com.erfolgi.moviecataloguepro.ui.favorite.FavoriteTabFragment"
        android:label="Aired Today"
        tools:layout="@layout/fragment_tv_show" />
</navigation>