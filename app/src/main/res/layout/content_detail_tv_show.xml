<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout

        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00000000"
    android:id="@+id/tv_show_detail_content"
        android:visibility="visible"
        >


        <androidx.core.widget.NestedScrollView
            android:background="#00000000"
            android:orientation="vertical"
            android:layout_width="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="250dp">
                        <ImageView
                            android:id="@+id/tv_detail_backdrop"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_refresh_black_24dp"
                            app:layout_collapseMode="pin"
                            app:layout_collapseParallaxMultiplier="0.7"

                            android:contentDescription="@string/tv_show_backdrop" />

                        <TextView
                            android:id="@+id/tv_show_detail_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingStart="12dp"
                            android:paddingTop="12dp"
                            android:paddingEnd="12dp"
                            android:shadowColor="#000000"
                            android:shadowDx="0"
                            android:shadowDy="2"
                            android:shadowRadius="20"
                            android:textColor="#dfdfdf"
                            android:textSize="28sp"
                            android:textStyle="bold|italic"
                            app:layout_constraintBottom_toTopOf="@+id/tv_detail_rating"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toStartOf="parent"
                            tools:text="TV Show Title" />

                        <RatingBar
                            android:id="@+id/tv_detail_rating"
                            android:layout_width="wrap_content"
                            android:layout_height="41dp"
                            style="?android:attr/ratingBarStyle"
                            android:progressTint="#ffd700"
                            android:backgroundTint="#ffd700"
                            android:secondaryProgressTint="#ffd700"
                            android:progressBackgroundTint="#aaafafaf"
                            android:numStars="5"
                            android:stepSize="0.1"
                            android:scaleX=".5"
                            android:rating="3.5"
                            android:scaleY=".5"
                            android:transformPivotX="0dp"
                            android:transformPivotY="0dp"
                            android:isIndicator="true"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"

                            android:layout_marginStart="12dp"
                            />

                    </androidx.constraintlayout.widget.ConstraintLayout>





                <LinearLayout
                    android:layout_marginTop="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    >
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">

                        <androidx.cardview.widget.CardView
                            android:layout_gravity="center_vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardBackgroundColor="#dd608038"
                            app:cardCornerRadius="20dp"
                            app:cardElevation="0dp">
                            <LinearLayout
                                android:padding="10dp"
                                android:layout_width="match_parent"
                                android:orientation="vertical"
                                android:layout_height="match_parent">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="16sp"
                                    android:textStyle="bold|italic"
                                    android:text="@string/first_aired"
                                    android:textColor="#fff"
                                    />
                                <LinearLayout
                                    android:layout_marginTop="5dp"
                                    android:layout_width="match_parent"
                                    android:orientation="horizontal"
                                    android:layout_height="wrap_content">
                                    <ImageView
                                        android:layout_width="30dp"
                                        android:layout_height="30dp"
                                        android:src="@drawable/ic_today_black_24dp"
                                        android:tint="#DDD81B60"
                                        android:contentDescription="@string/date_icon" />
                                    <Space
                                        android:layout_width="10dp"
                                        android:layout_height="match_parent"/>
                                    <TextView
                                        android:id="@+id/tv_show_detail_date"
                                        android:textColor="#fff"
                                        android:layout_gravity="center"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="16sp"
                                        android:textStyle="bold"
                                        tools:text="October 2, 2019"
                                        />
                                </LinearLayout>
                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>
                    <Space
                        android:layout_width="5dp"
                        android:layout_height="5dp"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                        <androidx.cardview.widget.CardView
                            android:layout_gravity="center_vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="20dp"
                            app:cardBackgroundColor="#ddffb347"
                            app:cardElevation="0dp">
                            <LinearLayout
                                android:padding="10dp"
                                android:layout_width="match_parent"
                                android:orientation="vertical"
                                android:layout_height="match_parent">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="16sp"
                                    android:textStyle="bold|italic"
                                    android:text="@string/language"
                                    android:textColor="#fff"
                                    />
                                <LinearLayout
                                    android:layout_marginTop="5dp"
                                    android:layout_width="match_parent"
                                    android:orientation="horizontal"
                                    android:layout_height="wrap_content">
                                    <ImageView
                                        android:layout_width="30dp"
                                        android:layout_height="30dp"
                                        android:src="@drawable/ic_language_black_24dp"
                                        android:contentDescription="@string/language_icon" />
                                    <Space
                                        android:layout_width="10dp"
                                        android:layout_height="match_parent"
                                        />
                                    <TextView
                                        android:id="@+id/tv_show_detail_language"
                                        android:textColor="#fff"
                                        android:layout_gravity="center"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="16sp"
                                        android:textStyle="bold"
                                        tools:text="English"
                                        />
                                </LinearLayout>
                            </LinearLayout>

                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </LinearLayout>


                <androidx.cardview.widget.CardView
                    android:layout_marginTop="12dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    app:cardCornerRadius="20dp"
                    app:cardBackgroundColor="#dddfdfdf"
                    app:cardElevation="0dp">
                    <LinearLayout
                        android:padding="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:layout_marginTop="12dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/overview"
                            android:textSize="16sp"
                            android:textColor="#050505"
                            android:textStyle="bold|italic"/>
                        <TextView
                            android:layout_marginTop="5dp"
                            android:id="@+id/tv_show_detail_overview"
                            android:layout_width="match_parent"
                            android:textSize="16sp"
                            android:textColor="#1a1a1a"
                            android:layout_height="wrap_content"
                            tools:text="@string/overview"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_marginTop="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    >
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                        <androidx.cardview.widget.CardView
                            android:layout_gravity="center_vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="20dp"
                            app:cardBackgroundColor="#dd3E54A1"
                            app:cardElevation="0dp">
                            <LinearLayout
                                android:padding="10dp"
                                android:layout_width="match_parent"
                                android:orientation="vertical"
                                android:layout_height="match_parent">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="16sp"
                                    android:textStyle="bold|italic"
                                    android:text="@string/vote_average"
                                    android:textColor="#fff"
                                    />
                                <LinearLayout
                                    android:layout_marginTop="5dp"
                                    android:layout_width="match_parent"
                                    android:orientation="horizontal"
                                    android:layout_height="wrap_content">
                                    <ImageView
                                        android:layout_width="30dp"
                                        android:layout_height="30dp"
                                        android:src="@drawable/ic_data_usage_black_24dp"
                                        android:contentDescription="@string/vote_icon" />
                                    <Space
                                        android:layout_width="10dp"
                                        android:layout_height="match_parent"
                                        />
                                    <TextView
                                        android:id="@+id/tv_show_detail_vote"
                                        android:textColor="#fff"
                                        android:layout_gravity="center"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="16sp"
                                        android:textStyle="bold"
                                        tools:text="10.0"
                                        />
                                </LinearLayout>
                            </LinearLayout>

                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                    <Space
                        android:layout_width="5dp"
                        android:layout_height="5dp"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">

                        <androidx.cardview.widget.CardView
                            android:layout_gravity="center_vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/thumbnail_card"
                            app:cardBackgroundColor="#DDD81B60"
                            app:cardCornerRadius="20dp"
                            app:cardElevation="0dp">
                            <LinearLayout
                                android:padding="10dp"
                                android:layout_width="match_parent"
                                android:orientation="vertical"
                                android:layout_height="match_parent">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="16sp"
                                    android:textStyle="bold|italic"
                                    android:text="@string/popularity"
                                    android:textColor="#fff"
                                    />
                                <LinearLayout
                                    android:layout_marginTop="5dp"
                                    android:layout_width="match_parent"
                                    android:orientation="horizontal"
                                    android:layout_height="wrap_content">
                                    <ImageView
                                        android:layout_width="30dp"
                                        android:layout_height="30dp"
                                        android:src="@drawable/ic_star_black_24dp"
                                        android:contentDescription="@string/popularty_icon" />
                                    <Space
                                        android:layout_width="10dp"
                                        android:layout_height="match_parent"
                                        />
                                    <TextView
                                        android:id="@+id/tv_show_detail_popularity"
                                        android:textColor="#fff"
                                        android:textStyle="bold"
                                        android:layout_gravity="center"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="16sp"
                                        tools:text="October 2, 2019"
                                        />
                                </LinearLayout>
                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="100dp"/>
            </LinearLayout>

        </androidx.core.widget.NestedScrollView>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        app:fabCustomSize="60dp"
        android:backgroundTint="#ccc"
        app:rippleColor="#999999"
        app:elevation="10dp"
        app:backgroundTint="#aaa"
        app:srcCompat="@drawable/ic_favorite_on"
        app:maxImageSize="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        />
    </androidx.constraintlayout.widget.ConstraintLayout>


